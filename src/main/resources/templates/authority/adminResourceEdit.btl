<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>修改权限资源</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/asset/css/admin.css">
</head>
<body>
<div class="weadmin-body">
    <!--form表单-->
    <form class="layui-form layui-form-pane">
        <div class="layui-form-item">
            <input type="hidden" name="resourceId" value="${@adminResource.getId()}" >
            <label class="layui-form-label">父级资源</label>
            <div class="layui-input-block">
                <select name="resourcePid">
                    <%
                    for(resource in allParentResources){
                    if(null != @adminResource.getSourcePid() && @adminResource.getSourcePid().toString().equals(resource.id)){
                    %>
                    <option value="${resource.id}" type="${resource.type}" selected>${resource.name}</option>
                    <%} else {%>
                    <option value="${resource.id}" type="${resource.type}">${resource.name}</option>
                    <%}}%>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">资源类型</label>
            <div class="layui-input-block">
                <select name="resourceType" lay-filter="resourceType">
                    <option value="0" <%if(@adminResource.getSourceType() == 0){%> selected <%}%>>目录</option>
                    <option value="1" <%if(@adminResource.getSourceType() == 1){%> selected <%}%>>菜单</option>
                    <option value="2" <%if(@adminResource.getSourceType() == 2){%> selected <%}%>>功能</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-block">
                <input type="checkbox" name="enable" lay-skin="switch" lay-text="启用|停用" <%if(@adminResource.isEnabled()){%> checked <%}%> value="1">
            </div>
        </div>
        <div class="layui-form-item" id="iconDiv" <%if(@adminResource.getSourceType() == 2){%> style="display: none" <%}%>>
            <label class="layui-form-label">资源图标</label>
            <div class="layui-input-block">
                <input type="text" name="iconfont" placeholder="请输入资源图标" autocomplete="off" id="iconPicker" lay-filter="iconPicker" class="layui-input" value="${@adminResource.getIconfont()}">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">资源名称</label>
            <div class="layui-input-block">
                <input type="text" name="resourceName" placeholder="请输入资源名称" autocomplete="off" class="layui-input" lay-verify="resourceName" value="${@adminResource.getSourceName()}">
            </div>
        </div>
        <div class="layui-form-item" id="urlDiv" <%if(@adminResource.getSourceType() == 0){%> style="display: none" <%}%> >
            <label class="layui-form-label">资源路由</label>
            <div class="layui-input-block">
                <input type="text" name="resourceUrl" placeholder="请输入资源路由" autocomplete="off" class="layui-input" lay-verify="resourceUrl" value="${@adminResource.getSourceUrl()}">
            </div>
        </div>
        <div class="layui-form-item" id="funDiv" <%if(@adminResource.getSourceType() == 0){%> style="display: none" <%}%> >
            <label class="layui-form-label">资源方法</label>
            <div class="layui-input-block">
                <input type="text" name="resourceFun" placeholder="请输入资源方法" autocomplete="off" class="layui-input" lay-verify="resourceFun" value="${@adminResource.getSourceFunction()}">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">资源排序</label>
            <div class="layui-input-block">
                <input type="text" name="resourceOrder" placeholder="请输入资源排序ID" autocomplete="off" class="layui-input" lay-verify="resourceOrder" value="${@adminResource.getSourceOrder()}">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="edit">提交修改</button>
                <button type="reset" id="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
<script src="/asset/lib/layui/layui.js"></script>
<script src="/asset/js/authority/resourcesEdit.js" type="text/javascript" charset="utf-8"></script>
</body>
</html>